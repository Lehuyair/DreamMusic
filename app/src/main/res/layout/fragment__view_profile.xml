<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edt_otp"
    android:orientation="vertical"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="20dp"
    >
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_backotp"
        android:background="@drawable/ic_backotp"
        android:layout_marginTop="20dp"



        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="View Profile"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="20dp"
        />


</LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgavataprofile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="75dp"
        android:layout_gravity="center"
        android:src="@drawable/img_logo">


    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/txtEmaillprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backButton"
        android:text="Nguyễn Phạm"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:textSize="26dp"
        />

    <TextView
        android:id="@+id/txtnameprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backButton"
        android:text="nguyenpham066@gmail.com"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:textColor="#E6E3E3"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="16dp"
        />
    <LinearLayout
        android:id="@+id/layoutmyprofile"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@color/profile"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_people"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên, Số điện thoại, Email"
            android:textColor="#fff"
            android:layout_margin="15dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_backrigght"

            android:layout_marginTop="13dp"
            android:layout_marginLeft="70dp"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/ChangePassword"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@color/profile"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_key"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:textColor="#fff"
            android:layout_margin="15dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_backrigght"
            android:layout_marginLeft="140dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutOut"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@color/profile"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_out"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"
            android:textColor="#fff"

            android:layout_margin="15dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_backrigght"
            android:layout_marginLeft="160dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Không Có hoạt động nào gần đây."
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="19dp"
        android:textStyle="bold"
        android:layout_marginTop="150dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Hãy khám phá nhạc mới ngay."
        android:gravity="center"
        android:textColor="#E6E3E3"
        android:textSize="14dp"
        android:layout_margin="5dp"/>



</LinearLayout>